{
  "name": "ewd-qoper8-koa",
  "version": "1.1.0",
  "description": "ewd-qoper8 message handling and router for Koa.js",
  "main": "index.js",
  "author": "Rob Tweed, M/Gateway Developments Ltd",
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 7.6",
    "npm": ">= 4.1.2"
  },
  "scripts": {
    "lint": "eslint lib spec",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jasmine --config=spec/support/unit.json",
    "test:integration": "jasmine --config=spec/support/integration.json",
    "coverage:unit": "nyc --reporter=html --reporter=text jasmine --config=spec/support/unit.json",
    "coverage:integration": "nyc --reporter=html --reporter=text jasmine --config=spec/support/integration.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robtweed/ewd-qoper8-koa.git"
  },
  "homepage": "https://github.com/robtweed/ewd-qoper8-koa#readme",
  "bugs": {
    "url": "https://github.com/robtweed/ewd-qoper8-koa/issues"
  },
  "pre-commit": [
    "lint",
    "test:unit"
  ],
  "nyc": {
    "all": true,
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "spec/**/*.js"
    ]
  },
  "dependencies": {
    "debug": "^3.1.0",
    "qewd-microservice-router": "^1.0.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.9.0",
    "ewd-qoper8": "^3.16.1",
    "jasmine": "^2.8.0",
    "jasmine-spec-reporter": "^4.1.1",
    "jasmine-spy-matchers": "^1.2.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.3.0",
    "mockery": "^2.1.0",
    "nyc": "^11.3.0",
    "pre-commit": "^1.2.2",
    "rewire": "^3.0.2",
    "supertest": "^3.0.0"
  }
}
